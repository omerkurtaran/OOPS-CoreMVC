<body class="login">
    <!-- BEGIN LOGO -->
    <div class="logo">
        <a href="/Login/Index" style="text-decoration:none">
            <h1>OopsHR</h1>
        </a>
    </div>
    <!-- END LOGO -->
    <!-- BEGIN LOGIN -->
    <div class="content">
        <!-- BEGIN LOGIN FORM -->
        <form asp-action="Login" asp-controller="Login" class="login-form" method="post">
            <h3 class="form-title">OOPS Title @*@sysLanguage.LoginStrings.lbl_ContentTitle*@</h3>
            <div class="alert alert-danger display-hide">
                <button class="close" data-close="alert"></button>
                <span> @*@sysLanguage.LoginStrings.plc_enteranyusernameandpassword*@ </span>
            </div>
            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9"> E-Mail Address </label>
                <div class="input-icon">
                    <i class="fa fa-user"></i>
                    <input class="form-control placeholder-no-fix"
                           asp-for="Email"
                           type="text" autocomplete="off"
                           placeholder="E-Mail Address"
                           name="EMail" />
                </div>
                <span asp-validation-for="@Model.Email"></span>
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9"> Password</label>
                <div class="input-icon">
                    <i class="fa fa-lock"></i>
                    <input class="form-control placeholder-no-fix"
                           asp-for="@Model.Password"
                           type="password" autocomplete="off"
                           placeholder="Password"
                           name="Password" />
                </div>
                <span asp-validation-for="@Model.Password"></span>
            </div>
            <div class="form-actions">
                <label class="rememberme mt-checkbox mt-checkbox-outline">
                    <input type="checkbox" name="remember" value="1" /> Remember?
                    <span></span>
                </label>
                <button type="submit" class="btn green pull-right"> SignIn</button>
            </div>
            <div class="forget-password">
                <h4> @*@sysLanguage.LoginStrings.plc_forgetPassword*@ </h4>
                <p>
                    @*@sysLanguage.LoginStrings.plc_noworries*@
                    <a id="forget-password" class="forget-password" href="javascript:;">şifremi unuttum @*@sysLanguage.LoginStrings.btn_here*@ </a> @*@sysLanguage.LoginStrings.plc_toresetyourpassword*@
                </p>
            </div>
        </form>
        <!-- END LOGIN FORM -->
        <!-- BEGIN FORGOT PASSWORD FORM -->
        <div class="create-account">
            <p>
                @*@sysLanguage.LoginStrings.plc_donthaveanaccountyet*@ &nbsp;
                <a asp-action="Register"> Hesap oluştur </a>
            </p>
        </div>

        <form class="forget-form" method="post">
            <h3> Şifremi Unuttum @*@sysLanguage.LoginStrings.plc_forgetpasswordQ*@ </h3>
            <p>  @*@sysLanguage.LoginStrings.plc_emailforresetpassword*@ </p>
            <div class="form-group">
                <div class="input-icon">
                    <i class="fa fa-envelope"></i>
                    <input class="form-control placeholder-no-fix"
                           type="text" autocomplete="off" placeholder=" Enter Your E-Mail " name="email" />
                </div>
            </div>
            <div class="form-actions">
                <button type="button" id="back-btn" class="btn red btn-outline"> Back </button>
                <button type="submit" class="btn green pull-right"> Send </button>
            </div>
        </form>
        <!-- END FORGOT PASSWORD FORM -->

    </div>
