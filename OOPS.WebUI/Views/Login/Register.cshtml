    <div class="logo">
        <a href="/Login/Index" style="text-decoration:none">
            <h1>OopsHR</h1>
        </a>
    </div>
    <!-- END LOGO -->
    <!-- BEGIN LOGIN -->
    <div class="content">
        <!-- BEGIN LOGIN FORM -->
        <form asp-action="Register" class="login-form" method="post">
            <h3> @*@sysLanguage.LoginStrings.plc_SingUp*@ </h3>
            <p> @*@sysLanguage.LoginStrings.plc_enterpersoneldetails*@ </p>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9"> @*@sysLanguage.LoginStrings.plc_FullName*@ </label>
                <div class="input-icon">
                    <i class="fa fa-font"></i>
                    <input class="form-control placeholder-no-fix"
                           type="text"
                           asp-for="@Model.Name"
                           placeholder="Ad" />
                </div>
                <span asp-validation-for="@Model.Name"></span>
            </div>

            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9"> @*@sysLanguage.LoginStrings.plc_FullName*@ </label>
                <div class="input-icon">
                    <i class="fa fa-font"></i>
                    <input class="form-control placeholder-no-fix"
                           type="text"
                           asp-for="@Model.Surname"
                           placeholder="Soyad" />
                </div>
                <span asp-validation-for="@Model.Surname"></span>
            </div>

            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9"> Telefon</label>
                <div class="input-icon">
                    <i class="fa fa-phone"></i>
                    <input class="form-control placeholder-no-fix"
                           type="tel"
                           asp-for="@Model.PhoneBusiness"
                           placeholder="Telefon Girin" />
                </div>
                <span asp-validation-for="@Model.PhoneBusiness"></span>
            </div>

            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9"> @*@sysLanguage.LoginStrings.plc_Email*@ </label>
                <div class="input-icon">
                    <i class="fa fa-envelope"></i>
                    <input class="form-control placeholder-no-fix"
                           type="text"
                           asp-for="@Model.Email"
                           placeholder="E-Mail" />
                </div>
                <span asp-validation-for="@Model.Email"></span>
            </div>

            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9"> @*@sysLanguage.LoginStrings.plc_Email*@ </label>
                <div class="input-icon">
                    <i class="fa fa-envelope"></i>
                    <input class="form-control placeholder-no-fix"
                           type="text"
                           asp-for="@Model.Title"
                           placeholder="Ünvan" />
                </div>
                <span asp-validation-for="@Model.Title"></span>
            </div>

            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9"> Company Name </label>
                <div class="input-icon">
                    <i class="fa fa-envelope"></i>
                    <input class="form-control placeholder-no-fix"
                           type="text"
                           asp-for="@Model.CompanyName"
                           placeholder="Firma Adı" />
                </div>
                <span asp-validation-for="@Model.CompanyName"></span>
            </div>

            <p> Enter your account details below: </p>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9"> @*@sysLanguage.LoginStrings.plc_username*@ </label>
                <div class="input-icon">
                    <i class="fa fa-user"></i>
                    <input class="form-control placeholder-no-fix" type="text"
                           autocomplete="off"
                           placeholder="Kullanıcı Adı"
                           asp-for="@Model.Username" />
                </div>
                <span asp-validation-for="@Model.Username"></span>
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9"> @*@sysLanguage.LoginStrings.plc_password*@ </label>
                <div class="input-icon">
                    <i class="fa fa-lock"></i>
                    <input class="form-control placeholder-no-fix"
                           asp-for="@Model.Password"
                           type="password" autocomplete="off"
                           placeholder="Şifre" />
                </div>
                <span asp-validation-for="@Model.Password"></span>
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9"> @*@sysLanguage.LoginStrings.plc_retypeyourpassword*@ </label>
                <div class="controls">
                    <div class="input-icon">
                        <i class="fa fa-check"></i>
                        <input class="form-control placeholder-no-fix"
                               asp-for="@Model.RePassword"
                               type="password" autocomplete="off"
                               placeholder="Şifreyi Tekrar Giriniz" />
                    </div>
                    <span asp-validation-for="@Model.RePassword"></span>
                </div>
            </div>
            @*<div class="form-group">
                <label class="mt-checkbox mt-checkbox-outline">
                    <input type="checkbox" name="tnc" /> I agree to the
                    <a href="javascript:;">Terms of Service </a> &
                    <a href="javascript:;">Privacy Policy </a>
                    <span></span>
                </label>
                <div id="register_tnc_error"> </div>
            </div>*@
            <div class="form-actions">
                <button id="register-back-btn" type="button" class="btn red btn-outline"onclick="location.href='/Login'" > Geri </button>
                <button type="submit"
                        id="register-submit-btn"
                        class="btn green pull-right"
                        asp-action="Register">
                    Kayıt Ol !
                </button>
            </div>
        </form>
