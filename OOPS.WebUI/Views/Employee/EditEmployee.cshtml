                                                <!--/span-->
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="control-label">Posta Kodu</label>
                                                        <input type="text" asp-for="@Model.EmployeeOtherInfo.PostalCode" class="form-control">
                                                    </div>
                                                </div>
                                                <!--/span-->
                                            </div>
                                            <!--/row-üstüne yaz-->
