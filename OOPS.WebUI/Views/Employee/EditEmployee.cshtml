                        </div>
                        <div class="portlet-body">
                            <div class="tab-content">
                                <!-- BAŞ GENEL INFO TAB -->
                                <div class="tab-pane active" id="tab_1">
                                    <form asp-action="EditEmployee" method="post" class="horizontal-form">
                                        <input type="hidden" asp-for="@Model.Employee.Id" />
                                        <input type="hidden" asp-for="@Model.Employee.CompanyID" />
                                        <div class="form-body">
                                            <!--Genel Bilgiler-->
                                            <h3 class="form-section">Genel Bilgiler</h3>
                                            <div class="row">

                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="control-label">Ad</label>
                                                        <input type="text" asp-for="@Model.Employee.Name" class="form-control">
                                                        <span asp-validation-for="@Model.Employee.Name"></span>
                                                    </div>
                                                </div>
                                                <!--/span-->
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="control-label">Soyad</label>
                                                        <input type="text" asp-for="@Model.Employee.Surname" class="form-control">
                                                    </div>
                                                </div>
                                                <!--/span-->
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="control-label">E-Posta</label>
                                                        <input type="text" asp-for="@Model.Employee.EmailBusiness" class="form-control">
                                                    </div>
                                                </div>
                                                <!--/span-->
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="control-label">Ünvan</label>
                                                        <input type="text" asp-for="@Model.Employee.Title" class="form-control">
                                                    </div>
                                                </div>
                                                <!--/span-->
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="control-label">Telefon (İş)</label>
                                                        <input type="text" asp-for="@Model.Employee.PhoneBusiness" class="form-control">
                                                    </div>
                                                </div>
                                                <!--/span-->
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="control-label">Telefon (Kişisel)</label>
                                                        <input type="text" asp-for="@Model.Employee.PhonePersonal" class="form-control">
                                                    </div>
                                                </div>
                                                <!--/span-->
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="control-label">Sözleşme Türü</label>
                                                        <select class="form-control" asp-for="@Model.Employee.ContractTypeID" asp-items="ViewBag.ContractType">
                                                            <option>Seçiniz</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <!--/span-->
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="control-label">Erişim Türü</label>
                                                        <select class="form-control" asp-for="@Model.Employee.AccessTypeID" asp-items="ViewBag.AccessType">
                                                            <option>Seçiniz</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <!--/span-->
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="control-label">İşe Başlama Tarihi</label>
                                                        <div class="input-group date date-picker" data-date-format="dd-mm-yyyy" data-date-start-date="+0d">
                                                            <input type="text" class="form-control" asp-for="@Model.Employee.StartDate">
                                                            <span class="input-group-btn">
                                                                <button class="btn default" type="button">
                                                                    <i class="fa fa-calendar"></i>
                                                                </button>
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>

                                                <!--/span-->
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="control-label">Sözleşme Bitiş Tarihi</label>
                                                        <div class="input-group date date-picker" data-date-format="dd-mm-yyyy" id="datepickersozlesmebitis">
                                                            <input type="text" class="form-control" asp-for="@Model.Employee.ContractEndDate">
                                                            <span class="input-group-btn">
                                                                <button class="btn default" type="button">
                                                                    <i class="fa fa-calendar"></i>
                                                                </button>
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                                <!--/span-->
                                            </div>
                                            <!--/row-üstüne yaz-->

                                        </div>
                                        <div class="margiv-top-10">
                                            <button type="submit" class="btn green btn-circle"> Kaydet </button>
                                            <button href="/Employee/List" class="btn default btn-circle"> İptal </button>
                                        </div>
                                    </form>
                                </div>
                                <!-- SON GENEL INFO TAB -->
                                <!-- BAŞ KARIYER INFO TAB -->
                                <div class="tab-pane" id="tab_2">
                                    <div action="#" class="horizontal-form">
                                        <div class="portlet light ">
                                            <div class="portlet-title">
                                                <div class="caption">
                                                    <span class="caption-subject font-blue-madison bold">
                                                        <i class="fa fa-user"></i>
                                                        Pozisyon
                                                    </span>
                                                </div>
                                                <div class="actions">
                                                    <div class="btn-group btn-group-devided" data-toggle="buttons">
                                                        <label class="btn sbold green btn-outline btn-circle btn-sm">
                                                            <a data-toggle="modal" href="#addPosition">
                                                                <i class="toggle"></i> Pozisyon Ekle
                                                            </a>
                                                            @*<input type="radio" name="options" class="toggle" href="#addPosition">Pozisyon Ekle*@
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="portlet-body">
                                                <div class="table-scrollable">
                                                    <table class="table table-hover table-light">
                                                        <thead>
                                                            <tr>
                                                                <th> Başlangıç </th>
                                                                <th> Bitiş </th>
                                                                <th> Çalışma Şekli </th>
                                                                <th> Şirket </th>
                                                                <th> Şube </th>
                                                                <th> Departman </th>
                                                                <th> Unvan </th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            @for (int i = 0; i < Model.Employee.EmployeePositions.Count; i++)
                                                            {
                                                                <tr>
                                                                    <td>@Model.Employee.EmployeePositions[i].Position.StartDate.ToString("dd.MM.yyyy HH:mm")</td>
                                                                    <td>@Model.Employee.EmployeePositions[i].Position.EndDate.ToString("dd.MM.yyyy HH:mm")</td>
                                                                    <td>@Model.Employee.EmployeePositions[i].Position.EmploymentType.EmploymentTypeName </td>
                                                                    <td>@Model.Employee.EmployeePositions[i].Position.Company.CompanyName</td>
                                                                    <td>@Model.Employee.EmployeePositions[i].Position.CompanyBranch.BranchName</td>
                                                                    <td>@Model.Employee.EmployeePositions[i].Position.CompanyDepartment.Name</td>
                                                                    <td>@Model.Employee.Title</td>
                                                                </tr>
                                                            }

                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div action="#" class="horizontal-form">
                                        <div class="portlet light ">
                                            <div class="portlet-title">
                                                <div class="caption">
                                                    <span class="caption-subject font-blue-madison bold">
                                                        <i class="fa fa-credit-card"></i>
                                                        Maaş
                                                    </span>
                                                </div>
                                                <div class="actions">
                                                    <div class="btn-group btn-group-devided" data-toggle="buttons">
                                                        <label class="btn sbold green btn-outline btn-circle btn-sm">
                                                            <input type="radio" name="options" class="toggle">Maaş Ekle
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="portlet-body">
                                                <div class="table-scrollable">
                                                    <table class="table table-hover table-light">
                                                        <thead>
                                                            <tr>
                                                                <th> Geçerlilik Başlangıç Tarihi </th>
                                                                <th> Tutar </th>
                                                                <th> Ödeme Düzeni </th>
                                                                <th> Ek Ödemeler </th>
                                                            </tr>
                                                        </thead>
                                                        <tbody>
                                                            <tr>
                                                                <td></td>
                                                                <td> <i class="fa fa-try" /> </td>
                                                                <td> Bürüt </td>
                                                                <td> - </td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!-- SON KARIYER INFO TAB -->
                                <!-- BAŞ KISISEL BILGILER INFO TAB -->
                                <div class="tab-pane" id="tab_3">
                                    <form asp-action="EditEmployeedetail" method="post" class="horizontal-form">
                                        <input type="hidden" asp-for="@Model.Employee.Id" />
                                        <input type="hidden" asp-for="@Model.Employee.CompanyID" />
                                        <input type="hidden" asp-for="@Model.EmployeeDetail.Id" />
                                        <input type="hidden" asp-for="@Model.EmployeeDetail.EmployeeID" />
                                        <div class="form-body">
                                            <h3 class="form-section">Kişisel Bilgiler</h3>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="control-label">Doğum Tarihi</label>
                                                        <input type="text" asp-for="@Model.EmployeeDetail.BirthDate" class="form-control">
                                                    </div>
                                                </div>
                                                <!--/span-->
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="control-label">Kimlik Numarası</label>
                                                        <input type="text" asp-for="@Model.EmployeeDetail.TCKN" class="form-control">
                                                    </div>
                                                </div>
                                                <!--/span-->
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="control-label">Medeni Hal</label>
                                                        <select class="form-control" asp-for="@Model.EmployeeDetail.MaritalStatusID" asp-items="ViewBag.MaritalStatus">
                                                            <option>Durum seçiniz</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <!--/span-->
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="control-label">Cinsiyet</label>
                                                        <select class="form-control" asp-for="@Model.EmployeeDetail.GenderID" asp-items="ViewBag.Gender">
                                                            <option>Seçiniz</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <!--/span-->
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="control-label">Engel Derecesi</label>
                                                        <select class="form-control" asp-for="@Model.EmployeeDetail.DisabilitySituationID" asp-items="ViewBag.Disability">
                                                            <option>Seçiniz</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <!--/span-->
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="control-label" asp-for="@Model">Uyruk</label>
                                                        <input type="text" asp-for="@Model.EmployeeDetail.Nationality" class="form-control">
                                                    </div>
                                                </div>
                                                <!--/span-->
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="control-label">Çocuk Sayısı</label>
                                                        <input type="text" asp-for="@Model.EmployeeDetail.Children" class="form-control">
                                                    </div>
                                                </div>
                                                <!--/span-->
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="control-label">Kan Grubu</label>
                                                        <select class="form-control" asp-for="@Model.EmployeeDetail.BloodGroupID" asp-items="ViewBag.BloodGroup">
                                                            <option>Seçiniz</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <!--/span-->
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="control-label">Eğitim Durumu</label>
                                                        <select class="form-control" asp-for="@Model.EmployeeDetail.EducationStatusID" asp-items="ViewBag.EducationStatus">
                                                            <option>Seçiniz</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <!--/span-->
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="control-label">Tamamlanan En Yüksek Eğitim Seviyesi</label>
                                                        <select class="form-control" asp-for="@Model.EmployeeDetail.EducationLevelID" asp-items="ViewBag.EducationLevel">
                                                            <option>Seçiniz</option>
                                                        </select>
                                                    </div>
                                                    <!--/span-->
                                                </div>

                                                <!--/span-->
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="control-label">Son Tamamlanan Eğitim Kurumu</label>
                                                        <input type="text" asp-for="@Model.EmployeeDetail.LastCompletedEducationalInstitution" class="form-control">
                                                    </div>
                                                </div>

                                                <!--/row-üsttekinin içine yaz-->
                                            </div>
                                            <div class="margiv-top-10">
                                                <button type="submit" class="btn green btn-circle"> Kaydet </button>
                                                <button href="/Employee/List" class="btn default btn-circle"> İptal </button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                                <!-- SON KISISEL BILGILER INFO TAB -->
                                <!-- BAŞ DIGER BILGILER INFO TAB -->
                                <div class="tab-pane" id="tab_4">
                                    <form asp-action="EditEmployeeOtherInfo" class="horizontal-form">
                                        <input type="hidden" asp-for="@Model.Employee.Id" />
                                        <input type="hidden" asp-for="@Model.Employee.CompanyID" />
                                        <input type="hidden" asp-for="@Model.EmployeeOtherInfo.Id" />
                                        <input type="hidden" asp-for="@Model.EmployeeOtherInfo.EmployeeID" />
