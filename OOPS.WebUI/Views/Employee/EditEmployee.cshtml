                                                </div>
                                                <!--/span-->
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label>IBAN</label>
                                                        <input type="text" asp-for="@Model.EmployeeOtherInfo.IBAN" class="form-control">
