                                                    <div class="form-group">
                                                        <label>Bağlantı Adı</label>
                                                        <input type="text" asp-for="@Model.EmployeeOtherInfo.SocialMediaConnectionName" class="form-control">
                                                    </div>
                                                </div>
                                                <!--/span-->
