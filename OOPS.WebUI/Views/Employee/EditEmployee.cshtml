                                                    <div class="form-group">
                                                        <label>Banka Adı</label>
                                                        <input type="text" asp-for="@Model.EmployeeOtherInfo.BankName" class="form-control">
                                                    </div>
                                                </div>
                                                <!--/span-->
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="control-label">Hesap Tipi</label>
