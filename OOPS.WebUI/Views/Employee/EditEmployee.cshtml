                                            <!--Adres Bilgileri-->
                                            <h3 class="form-section">Adres Bilgileri</h3>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="control-label">Adres Bilgileri</label>
                                                        <input type="text" asp-for="@Model.EmployeeOtherInfo.AdressInfo" class="form-control">
                                                    </div>
                                                </div>
                                                <!--/span-->
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="control-label">Adres (devam)</label>
                                                        <input type="text" asp-for="@Model.EmployeeOtherInfo.AdressFull" class="form-control">
                                                    </div>
                                                </div>
                                                <!--/span-->
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="control-label">Ev Telefonu</label>
                                                        <input type="text" asp-for="@Model.EmployeeOtherInfo.HomePhone" class="form-control">
                                                    </div>
                                                </div>
                                                <!--/span-->
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="control-label">Ülke</label>
                                                        <select class="form-control" asp-for="@Model.EmployeeOtherInfo.CountryId" asp-items="ViewBag.Country">
                                                            <option>Seçiniz</option>
                                                        </select>
                                                    </div>
                                                </div>
                                                <!--/span-->
                                                <div class="col-md-6">
                                                    <div class="form-group">
                                                        <label class="control-label">Şehir</label>
                                                        <input type="text" asp-for="@Model.EmployeeOtherInfo.CityName" class="form-control">
